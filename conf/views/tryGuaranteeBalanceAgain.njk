{% extends 'error.njk' %}
{% extends "includes/layout.njk" %}

{% from "govuk/components/button/macro.njk"        import govukButton %}
{% from "macros/title.njk"                         import title %}

{% block pageTitle %}
  {{ title(messages("tryGuaranteeBalanceAgain.title")) }}
{% endblock %}

{% block mainContent %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <h1 class="govuk-heading-xl">{{ messages("tryGuaranteeBalanceAgain.heading") }}</h1>
      <p class="govuk-body">{{ messages("tryGuaranteeBalanceAgain.checkDetails.prelink") }}
        <a class="govuk-link" id="check-details" href="{{ routes.controllers.CheckYourAnswersController.onPageLoad().url }}">
           {{ messages("tryGuaranteeBalanceAgain.checkDetails.link") }}
        </a>
        {{ messages("tryGuaranteeBalanceAgain.checkDetails.postlink", waitTimeInSeconds) }}
      </p>

      <form action="{{ routes.controllers.TryGuaranteeBalanceAgainController.onSubmit().url }}" method="post">

        {{ csrf() | safe }}

        {{ govukButton({
          text: messages("site.tryAgain"),
          preventDoubleClick: true,
          attributes: {id: "submit"}
        }) }}

      </form>
    </div>
  </div>
{% endblock %}