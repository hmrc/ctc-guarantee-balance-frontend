{% extends "includes/layout.njk" %}

{% from "macros/title.njk"                         import title %}
{% from "govuk/components/button/macro.njk"        import govukButton %}

{% block pageTitle %}
  {{ title(messages("rateLimit.title")) }}
{% endblock %}

{% block mainContent %}

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        <h1 class="govuk-heading-xl">
          {{ messages("rateLimit.heading") }}
        </h1>

        <p class="govuk-body">
          {{ messages("rateLimit.paragraph") }}
        </p>

      <form action="{{ routes.controllers.RateLimitController.onSubmit().url }}" method="post">

        {{ csrf() | safe }}

        {{ govukButton({
          text: messages("site.tryAgain"),
          preventDoubleClick: true,
          attributes: {id: "submit"}
        }) }}

      </form>



      </div>
    </div>

{% endblock %}
