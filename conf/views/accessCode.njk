{% extends "includes/layout.njk" %}

{% from "govuk/components/back-link/macro.njk"     import govukBackLink %}
{% from "govuk/components/input/macro.njk"         import govukInput %}
{% from "govuk/components/button/macro.njk"        import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "macros/title.njk"                         import title %}

{% block pageTitle %}
  {{ title(messages("accessCode.title"), form.errors) }}
{% endblock %}

{% block beforeContent %}

  {{ govukBackLink({
    text: messages("site.back")
  }) }}

{% endblock %}

{% block mainContent %}

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        {% if form.errors.length > 0 %}
          {{ govukErrorSummary({
            "titleText": messages("error.summary.title"),
            "errorList": form.errors
          }) }}
        {% endif %}

        <h1 class="govuk-heading-xl">{{ messages("accessCode.heading") }}</h1>

        <p class="govuk-body">{{ messages("accessCode.paragraph") }}</p>

        <form action="{{ routes.controllers.AccessCodeController.onSubmit(mode).url }}" method="post">

          {{ csrf() | safe }}

          {{ govukInput({
            hint: {
              text: messages('accessCode.hint')
            },
            label: {
              text: messages('accessCode.label'),
              isPageHeading: false,
              classes: "govuk-label--m"
            },
            type: "password",
            id: "value",
            classes: "govuk-input--width-5",
            name: "value",
            value: form.value.value,
            errorMessage: form.value.error,
            autocomplete: "off"
          }) }}

          {{ govukButton({
            text: messages("site.continue"),
            attributes: {id: "continue"}
          }) }}

        </form>

      </div>
    </div>

{% endblock %}
